<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".CategoryPage"
    android:background="@color/header"
    android:id="@+id/container">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textColor="@color/txtHeader"
        android:id="@+id/txtTitle"
        android:textSize="@dimen/title_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/txtLineHeader"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/txtHeader"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/txtLineHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="@dimen/title_size"
            android:layout_height="@dimen/title_size"
            android:id="@+id/imgBackButton"
            android:src="@drawable/button_home"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/addNew"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_above="@id/txtLineHeader"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/title_size"
            android:layout_height="@dimen/title_size"
            android:id="@+id/image"
            android:background="@drawable/plusbutton"
            />


        <TextView android:text="@string/new_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txtHeader"
            android:gravity="center_vertical"
            android:id="@+id/txtAddNew"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtLineHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridFragmentPlaceholder"
        android:background="@color/body"></LinearLayout>


</RelativeLayout>
