<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bar"
        android:layout_alignParentBottom="true"
        android:id="@+id/iconBar"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/iconOne"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:background="@drawable/gridview_button_rounded"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTitleOne"

                >

                <TextView android:id="@+id/txtTitleOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/txtIcons"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnRemoveOne"
                    android:background="@drawable/x"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <ImageView android:id="@+id/imgIconOne"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>



        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:id="@+id/txtSpacerOne"
            android:background="@color/bar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/iconTwo"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:background="@drawable/gridview_button_rounded"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTitleTwo"

                >

                <TextView android:id="@+id/txtTitleTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/txtIcons"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnRemoveTwo"
                    android:background="@drawable/x"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <ImageView android:id="@+id/imgIconTwo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:id="@+id/txtSpacerTwo"
            android:background="@color/bar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/iconThree"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:background="@drawable/gridview_button_rounded"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTitleThree"

                >

                <TextView android:id="@+id/txtTitleThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/txtIcons"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnRemoveThree"
                    android:background="@drawable/x"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <ImageView android:id="@+id/imgIconThree"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:id="@+id/txtSpacerThree"
            android:background="@color/bar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/iconFour"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:background="@drawable/gridview_button_rounded"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutTitleFour"

                >

                <TextView android:id="@+id/txtTitleFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/txtIcons"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnRemoveFour"
                    android:background="@drawable/x"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <ImageView android:id="@+id/imgIconFour"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:id="@+id/txtSpacerFour"
            android:background="@color/bar"/>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:id="@+id/checkMark"
        android:layout_weight=".2"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgCheckMark"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/txtTopOfBar"
        android:background="#ff000000"
        android:layout_above="@+id/iconBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <info498.group3.pocketpoint.HeaderGridView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/myGridView"
        android:numColumns="4"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_above="@id/txtTopOfBar"
        />


</RelativeLayout>