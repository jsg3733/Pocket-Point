<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info498.group3.pocketpoint" >

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_point"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/noAnimOrActionBar" >
        <activity
            android:name=".CategoryPage"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WordPage"
            android:label="@string/title_activity_word_page"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".NewCategory"
            android:label="@string/title_activity_new_category"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".NewWord"
            android:label="@string/title_activity_new_word"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ArrangePage"
            android:label="@string/title_activity_arrange_page"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".KiddoPage"
            android:label="@string/title_activity_kiddo_page"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
